# Turn off copyright page
startup_message off

# Ensure 256 color compat
term xterm-256color

# Fix backgroun (yast)
# defbce on

# Scrollback
defscrollback 10000
termcapinfo xterm* ti@:te@

#Bottom status bar (old is commented out)
#hardstatus alwayslastline '%{= G}[%H]%{y} [Load: %l] %= %{= d}%-w%{+b y}%n*%t%{-b g}%{w}%+w %= %{C}[ %C:%s %A ] %{+b w}%D%{-b w} %{R}[ %Y.%m.%d ]'
hardstatus alwayslastline "%{b kw}%H %{r}%1` %{w}| %{g}%c %{w}| %{y}%d.%m.%Y %{w}| %{g}%l %{w}| %{-b kw}%u %-Lw%{= rW}%50> %n%f %t %{-}%+Lw%<"

screen 0
screen 1

# Turn off Bell
vbell off

# Select first screen
select 0

# Change screen/windows with shift and left/right arrow keys
#bindkey ^[[1;5D prev
#bindkey ^[[1;5C next

bindkey ^[[1;2D prev
bindkey ^[[1;2C next
